<% layout('layouts/boilerplate') %>


<div class="row">
  <!-- If we are creating a column of 6 and want something in the middle offset it by 3-->
  <div class="col-6 offset-3">
    <h1>New Campground</h1>
   
    <form action="/campgrounds" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="campground[title]" />
      </div>

      <div class="mb-3">
        <label class="form-label" for="image">Image</label>
        <input class="form-control" type="text" id="image" name="campground[image]" />
      </div>

      <div class="mb-3">
        <label  class="form-label" for="price">Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input type="text" class="form-control" id="price" placeholder="10.00" name="campground[price]" aria-label="Price" aria-describedby="price-label">
        </div>
      </div>

      <div class="mb-3">
        <label  class="form-label" for="description">Description</label>
        <textarea
        class="form-control" 
          id="description"
          name="campground[description]"
          rows="20"
          cols="50"
        ></textarea>
      </div>

      <div class="mb-3">
        <label  class="form-label" for="location">Location</label>
        <input class="form-control"  type="text" id="location" name="campground[location]" />
      </div>
      <div class="mb-3">     
        <button class='btn btn-success'>Add campground</button>

      </div>
 
    </form>
  </div>


</div>


